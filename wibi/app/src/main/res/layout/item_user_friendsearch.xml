<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatarFriendS"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUserFullName"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/lblMe"
        android:textSize="24dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/userAvatarFriendS"
        android:layout_toEndOf="@+id/userAvatarFriendS"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status"
        android:visibility="gone"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/lblUserFullName"
        android:layout_toRightOf="@+id/userAvatarFriendS"
        android:layout_toEndOf="@+id/userAvatarFriendS"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddNewFriend"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/lblUserFullName"
        android:layout_toRightOf="@id/userAvatarFriendS"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_friend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblAddFriend"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>