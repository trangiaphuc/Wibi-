<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatarOnline"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/statusMes"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/userAvatarOnline"
            android:layout_toRightOf="@+id/userAvatarOnline"
            android:layout_toEndOf="@+id/userAvatarOnline"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOnlineFullName"
            android:maxWidth="80dp"
            android:maxHeight="50dp"
            android:text="asdhjskahdkajshd"
            android:layout_below="@id/userAvatarOnline"
            android:layout_marginTop="-10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:gravity="center"/>

</RelativeLayout>
